<html>
<head>
    <meta charset="UTF-8"/>
    <link href="/static/css/filemgr.css" rel="stylesheet">
    <script type="application/javascript" src="/static/js/filemgr.js"></script>
    <script type="application/javascript" src="/static/js/hls.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/web-streams-polyfill@2.0.2/dist/ponyfill.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/streamsaver@2.0.3/StreamSaver.min.js"></script>
</head>
<body>
<form id="uploadform" action="/upload" method="POST" class="hidden" enctype="multipart/form-data">
    <input type="file" id="file" onchange="uploadprompt()" name="file">
    <input type="submit" id="submit" value="Submit">
</form>
<div>
    <!-- page background div -->
    <div id="filemgrlogocontainer">
        <!-- logo -->
        <img id="filemgrlogo" src="/static/image/logo.svg">
    </div>
    <div id="superbox">
        <!-- super box around file manager -->
        <div id="upperbar">
            <!-- upper bar that houses search bar -->
            <div onclick="upload()"  id="uploadbutton" class="fmboxbutton">
                <!-- upload button -->
                <p class="fmbuttontext">Upload File</p>
            </div>
            <div id="searchbox">
                <input type="search" id="search" onInput="getSearchString()" name="search" placeholder="search">
            </div>
            <div id="filterbutton" class="fmboxbutton">
                <!-- view button -->
                <p class="fmbuttontext">View</p>
            </div>
                <!--<input type="search" id="search" onInput="getSearchString()" name="search"> -->
        </div>
        <div id="filedisplaybox">
            <!-- sub box in which the actual files are displayed-->
            <table id="filetable">
                <colgroup>
                    <col id="filenamecolumn">
                    <col id="filetypecolumn">
                    <col id="uploaddatecolumn">
                </colgroup>
                <thead>
                <tr>
                    <th onclick="fileNameSort()">File Name</th>
                    <th>File Type</th>
                    <th onclick="uploadDateSort()">Upload Date</th>
                </tr>
                </thead>
                <tbody id="tablebody"></tbody>
            </table>
            <!--<div id="videoplayer">
                <p>this is a test</p>
            </div>-->
        </div>
    </div>
</div>
